    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShopUchetOnline"
        android:usesCleartextTraffic="true">
        <activity android:name=".RegActivity"></activity>
        <activity android:name=".ChangeProductActivity" />
        <activity android:name=".DealPunktListActivity" />
        <activity android:name=".DealListActivity" />
        <activity android:name=".DealPunktActivity" />
        <activity android:name=".DealActivity" />
        <activity android:name=".WarehousActivity" />
        <activity android:name=".ProductActivity" />
        <activity android:name=".CabinetActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>