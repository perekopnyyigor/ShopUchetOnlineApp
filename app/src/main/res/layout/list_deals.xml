    android:orientation="horizontal" >

    <TextView
        android:id="@+id/date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Добавить категорию"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/type"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Добавить категорию"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/sum"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Добавить категорию"
        android:textSize="15sp" />

